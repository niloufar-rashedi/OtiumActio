@model OtiumActio.Dto.ParticipantDto

@{
    ViewBag.Title = "Register";
}
<!DOCTYPE html>
<html>

<head>
    <meta name="keywords" content="Hitta sociala aktiviteter" />
    @*<meta http-equiv="refresh" content="5; url = http://www.tutorialspoint.com" />*@
</head>

<body>
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-md-5">
                @using (Html.BeginForm("Register", "User", FormMethod.Post, new { id = "RegisterForm", enctype = "multipart/form-data" }))
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <fieldset>

                        <div class="card">
                            <div class="card-header">
                                <div class="card-title">Skapa konto</div>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    @Html.Label("Förnamn")
                                    @Html.EditorFor(m => m.PrtcFirstName, "", new { @class = "form-control", @placeholder = "First Name" })
                                    @Html.ValidationMessageFor(m => m.PrtcFirstName, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.Label("Familjnamn")
                                    @Html.EditorFor(m => m.PrtcLastName, "", new { @class = "form-control", @placeholder = "Last Name" })
                                    @Html.ValidationMessageFor(m => m.PrtcLastName, "", new { @class = "text-danger" })

                                </div>
                                <div class="form-group">
                                    @Html.Label("E-post")
                                    @Html.EditorFor(m => m.PrtcUserName, "", new { @class = "form-control", @placeholder = "Email" })
                                    @Html.ValidationMessageFor(m => m.PrtcUserName, "", new { @class = "text-danger" })
                                    @if (ViewBag.error != null)
                                    {
                                        <span class="badge badge-danger">@ViewBag.error</span>
                                    }
                                </div>
                                <div class="form-group">
                                    @Html.Label("Lösenord")
                                    @Html.PasswordFor(m => m.PrtcPassword, new { @class = "form-control", @placeholder = "Password" })
                                    @Html.ValidationMessageFor(m => m.PrtcPassword, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.Label("Bekräfta ditt lösenord")
                                    @Html.PasswordFor(m => m.PrtcConfirmPassword, new { @class = "form-control", @placeholder = "Confim Password" })
                                    @Html.ValidationMessageFor(m => m.PrtcConfirmPassword, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <input type="submit" class="btn btn-danger" value="Registrera" />
                                </div>
                            </div>
                        </div>
                    </fieldset>
                }
            </div>




        </div>
        <div id="dialog" style="display: none">
        </div>
        @if (ViewBag.Msg != null)
        {

            <!-- Modal -->
            <div class="modal fade" id="myModal" role="dialog">
                <div class="modal-dialog modal-sm">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                        </div>
                        <div class="modal-body">
                            <p>@ViewBag.Msg.</p>
                        </div>
                        <div class="modal-footer">
                            @Html.ActionLink("Logga in", "LoginForm", "User")
                        </div>
                    </div>
                </div>
            </div>

            <button type="button" class="btn btn-info btn-lg" id="bootstrapmodel" data-toggle="modal" data-target="#myModal" style="display:none">Open Small Modal</button>
        }

    </div>
    </body>
</html>
    @section scripts
    {
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script>
            $('#myModal').modal('show');

        </script>
    }
