@model OtiumActio.Models.ActivityViewModel
<div>
    @using (Html.BeginForm("AddNewActivity", "SuggestedActivity", FormMethod.Post, new { id= "addactivities", enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <fieldset>
        @Html.LabelFor(model => model.Categories, new { @class = "control-label col-md-2" })
        <div class="col-md-10 editor-label">
            @Html.DropDownList("Category", (IEnumerable
        <SelectListItem>)ViewData["SelectableCategories"])

        </div>
        @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
        <div class="col-md-10 editor-label">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description,"", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.Participants, new { @class = "control-label col-md-2" })
        <div class="col-md-10 editor-label">
            @Html.EditorFor(model => model.Participants)
            @Html.ValidationMessageFor(model => model.Participants, "", new { @class = "text-danger" })
        </div>
        @Html.LabelFor(model => model.Date, new { @class = "control-label col-md-2" })
        <div class="col-md-10 editor-label">
            @Html.EditorFor(model => model.Date, new { @class = "date" })
        </div>


        <div class="col-md-10" style="margin-top: 15px">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>


    </fieldset>

    }
    @*<div id="snackbar">
        <p>@TempData["Success"]</p>
    </div>*@
    <div id="displayAllActivities" style="display: none;">
        <p>Tack för att förslå en ny aktivitet!</p>
    </div>

    </div>
